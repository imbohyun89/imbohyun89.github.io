<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wt.mapper.ContiCountryMapper">
<resultMap type="contiCountry" id="contiCountryResult">
		<result column="city_num" property="city_num"/>
		<result column="conti_name_kor" property="conti_name_kor"/>
		<result column="conti_name_eng" property="conti_name_eng"/>
		<result column="country_name_kor" property="country_name_kor"/>
		<result column="country_name_eng" property="country_name_eng"/>
		<result column="city_name_kor" property="city_name_kor"/>
		<result column="city_name_eng" property="city_name_eng"/>
</resultMap>
<resultMap type="contiCountry" id="countryResult">
		<result column="country_name_kor" property="country_name_kor"/>
		<result column="country_name_eng" property="country_name_eng"/>
</resultMap>

	<select id="select" parameterType="String" resultMap="contiCountryResult">
		SELECT * FROM WT_LOC WHERE UPPER(city_name_eng) LIKE #{obj} || '%'
	</select>
	<select id="selectall" resultType="contiCountry">
		SELECT * FROM WT_LOC
	</select>
	<select id="selectcty" parameterType="String" resultMap="countryResult">
		SELECT DISTINCT country_name_kor, country_name_eng FROM WT_LOC WHERE conti_name_eng=#{obj}
	</select>
	<select id="selectloc" parameterType="String" resultType="contiCountry">
		SELECT * FROM WT_LOC WHERE UPPER(country_name_eng) LIKE #{obj} || '%'
	</select>
	<insert id="insert" parameterType="contiCountry">
		INSERT INTO wt_loc VALUES(#{city_num},#{conti_name_kor},#{conti_name_eng},#{country_name_kor},#{country_name_eng},#{city_name_kor},#{city_name_eng})
	</insert>
	<update id="update" parameterType="contiCountry">
		UPDATE wt_loc SET conti_name_kor=#{conti_name_kor},conti_name_eng=#{conti_name_eng},country_name_kor=#{country_name_kor},country_name_eng=#{country_name_eng},city_name_kor=#{city_name_kor},city_name_eng=#{city_name_eng} WHERE city_num=#{city_num}
	</update>
	<delete id="delete" parameterType="String">
		DELETE FROM wt_loc WHERE city_name=#{obj}
	</delete>
	
</mapper>






